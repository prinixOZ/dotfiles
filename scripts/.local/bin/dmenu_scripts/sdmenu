#!/bin/sh

file="$HOME/.config/bm/search"

content=$(cat $file| sed -e '/^\s*#/d' | column -ts "|" -o "$(printf "%1000s")|" | tofi | awk -F "|" '{print $NF}')
[ $content ] && term=$(echo "" | tofi --height=35 --width=100% | sed "s/\ /+/g")
search=$(echo $content | sed "s/%s/$term/g")
[ $term ] && librewolf -P default "$search"

