#!/bin/bash

getUpdate(){
    pacman -Qu | wc -l
}

###########################################################################################################	
#Time
gettime(){
    time=$(date +"%r")
    date=$(date +"%b %d, %Y")
    printf "Time: $time\nDate: $date"
}
###########################################################################################################	

getbattery(){
    percentage=$(cat /sys/class/power_supply/BAT0/capacity)
    status=$(cat /sys/class/power_supply/BAT0/status)
    printf "Battery: $percentage%%%% [$status]"
}

getbattery

allprint(){
    getinfo="$(gettime)\n$(getbattery)"
    printf "\n$getinfo\n "
}

notify-send "$(allprint)"
