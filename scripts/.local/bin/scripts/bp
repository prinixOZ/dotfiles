#!/bin/bash
files(){
	cd ~/.pendrive/
	rclone -P sync . "drive:Personal"
	cd -
}

config(){
	cd ~/.dotfiles/
	git add .
	git commit -m $(date "+%D|%T")
	git push origin main
	cd -
}

update(){
	paru -Syyu
	sudo pacman -Rs $(pacman -Qqtd)
}

all(){
	config
	files 
	update
}

case $1 in 
	-f)
		files;;
	-c)
		config;;
	-u)
		update;;
	-k)
		password;;
	*)
		all;;
esac
