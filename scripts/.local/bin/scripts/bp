#!/bin/bash
files(){
	cd ~/.pendrive/
	rclone -P sync . "drive:Personal"
	cd -
}

config(){
	cd ~/.local/dotfiles/
	git add .
	git commit -m $(date "+%D|%T")
	git push origin main
	cd -
}

update(){
	paru -Syyu
	sudo pacman -Rs $(pacman -Qqtd)
}

all(){
	config
	files 
	update
}


help_file(){
    echo \
    "    -f files ( gdrive)
    -c config
    -u update
    -k password
    --help, -h help "
}

case $1 in 
	-f)
		files;;
	-c)
		config;;
	-u)
		update;;
	-k)
		password;;
	-h)
		help_file;;
	--help)
		help_file;;
	*)
		all;;
esac
